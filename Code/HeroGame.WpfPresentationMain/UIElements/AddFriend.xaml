<Window x:Class="HeroGame.WpfPresentationMain.UIElements.AddFriend"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AddFriend" Height="170" Width="320" 
        MaxHeight="170" MaxWidth="320" MinHeight="170" MinWidth="320"
        Background="#FF32B4B4" WindowStyle="None" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Enter nickname" Margin="10,24,10,107" TextAlignment="Center" TextWrapping="Wrap" FontSize="18" FontFamily="Buxton Sketch"/>
        <TextBox Name="tbNickName" Margin="70,55,73,74"/>
        <Button Name="btnOk" Content="Ok" Margin="0,90,0,0" Height="35" Width="120" Background="Orange" BorderBrush="Black" Click="btnOk_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
    </Grid>
</Window>
